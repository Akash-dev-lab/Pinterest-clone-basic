<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex justify-center items-center">
    <div class="w-96 p-10 bg-white flex flex-col space-y-3 rounded-[25px] items-center">
      <div class="w-full h-auto flex justify-center items-center space-y-3 items-center flex-col">
      <img class="w-10 inline-block" src="/images/pintlogo.png" alt="">
      <h1 class="text-3xl text-center text-zinc-700 font-semibold leading-none tracking-tight">Welcome to Pinterest</h1>
      <p class="text-zinc-700 mt-0">Find new ideas to try</p>
      <form class="w-full p-4 text-sm space-y-6" action="">
        <div class="space-y-1">
        <label for="email">Email</label>
        <br>
        <input class="w-full h-10 p-1 rounded-lg outline outline-zinc-300" type="email" placeholder="Email" name="email">
